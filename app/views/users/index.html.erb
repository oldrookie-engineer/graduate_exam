<div class="conversation_image">
  <div class="conversation_mask">
    <div class="content-title">
      <h1>ア ー カ イ ブ 使 用・返 却</h1>
    </div>
    <table class="table table-hover" id="conversation-index">
      <thead>
        <tr class="table-success">
        <% if current_user.try(:admin?) %>
          <!-- <th colspan="2"><h3>送 信 先 （登 録 ユ ー ザ ー）</h3></th> -->
          <th><h3>送 信 先 （登 録 ユ ー ザ ー）</h3></th>
          <th><h3>メ ッ セ ー ジ</h3></th>
        <% else %>
          <!-- <th colspan="2"><h3>送 信 先 （管 理 者）</h3></th> -->
          <th><h3>送 信 先 （管 理 者）</h3></th>
          <th><h3>メ ッ セ ー ジ</h3></th>
        <% end %>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <% if user.id != current_user.id %>
            <td>
              <h4><%= user.name %></h4>
            </td>
            <td>
              <%= link_to conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post do %>
                <%= image_tag asset_path("mail-icon.png") %>
              <% end %>
            </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users, class: "page" %><br>
    <%= link_to "メ ッ セ ー ジ 受 信 確 認", http://18.177.61.251, target: :_blank, class: "btn btn-outline-success" %><br><br>
    <%= link_to "幼 稚 園 一 覧", kindergartens_path, class: "link" %><br><br>
  </div>
</div>
