<div class="conversation_image">
  <div class="conversation_mask">
    <div class="content-title">
      <h1>ア ー カ イ ブ 使 用・返 却</h1>
      <%= search_form_for @q do |f| %>
        <%= f.label :name, "登 録 ユ ー ザ ー 名 で 検 索 (部 分 検 索 も 可)" %><br>
        <%= f.search_field :name_cont, class: "form" %>
        <%= f.submit "  ", class: "search" %>
      <% end %>
    </div><br>
    <table class="table table-hover" id="conversation-index">
      <thead>
        <tr class="table-success">
        <% if current_user.try(:admin?) %>
          <!-- <th colspan="2"><h3>送 信 先 （登 録 ユ ー ザ ー）</h3></th> -->
          <th><h3>送 信 先 （登 録 ユ ー ザ ー）</h3></th>
          <th><h3>メ ッ セ ー ジ</h3></th>
        <% else %>
          <!-- <th colspan="2"><h3>送 信 先 （管 理 者）</h3></th> -->
          <th><h3>送 信 先 （管 理 者）</h3></th>
          <th><h3>メ ッ セ ー ジ</h3></th>
        <% end %>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <% if user.id != current_user.id %>
            <td>
              <h4><%= user.name %></h4>
            </td>
            <td>
              <%= link_to conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post do %>
                <%= image_tag asset_path("mail-icon.png") %>
              <% end %>
            </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users, class: "page" %>
    <% if current_user.try(:admin?) %>
      <%= link_to "メ ッ セ ー ジ 受 信 確 認（ 管理者用 ）", "http://18.177.61.251/letter_opener", target: :_blank, class: "btn btn-success rounded-pill p-3" %>
    <% end %><br><br>
    <%= link_to "アー カ イ ブ リ ス ト", archives_path, class: "link" %>
  </div>
</div>
