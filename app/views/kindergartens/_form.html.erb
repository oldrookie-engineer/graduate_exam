<%= form_with(model: @kindergarten, local: true)do |form| %>
  <% if @kindergarten.errors.any? %>
    <div id="error_explanation">
      <h2><%= @kindergarten.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @kindergarten.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h2>概要情報</h2>
  <div class="kindergarten_profile">
    <table>
      <tr>
        <th>
          <%= form.label :name %>
        </th>
        <th>
          <%= form.label :address %>
        </th>
        <th>
          <%= form.label :phone_number %>
        </th>
        <th>
          <%= form.label :school_area_image %>
        </th>
        <th>
          <%= form.label :school_floor_image %>
        </th>
      </tr>
      <tr>
        <td>
          <%= form.text_field :name %>
        </td>
        <td>
          <%= form.text_field :address %>
        </td>
        <td>
          <%= form.telephone_field :phone_number %>
        </td>
        <td>
          <%= form.file_field :image %>
        </td>
        <td>
          <%= form.file_field :cover_image %>
        </td>
        <td>
      </tr>
    </table>
    <%= form.fields_for :stations do |f| %>
    <table>
      <tr>
        <th><%= f.label :route %></th>
        <th><%= f.label :station_name %></th>
        <th><%= f.label :walk_time %></th>
      </tr>
      <tr>
        <td><%= f.text_field :route %>線</td>
        <td><%= f.text_field :station_name %>駅</td>
        <td><%= f.text_field :walk_time %>分</td>
        <td><%= f.hidden_field :id %></td>
      </tr>
    </table>
    <% end %>
  </div>
  <h2>認可情報</h2>
  <div class="kindergarten_authorization">
    <%= form.fields_for :authorization do |f| %>
    <table>
      <tr>
        <th><%= f.label :principal %></th>
        <th><%= f.label :installation_date %></th>
        <th><%= f.label :number_of_classes %></th>
        <th><%= f.label :capacity %></th>
      </tr>
      <tr>
        <td><%= f.text_field :principal %></td>
        <td><%= f.text_field :installation_date %></td>
        <td><%= f.text_field :number_of_classes %>学級</td>
        <td><%= f.text_field :capacity %>人</td>
        <td><%= f.hidden_field :id %></td>
      </tr>
      <tr>
        <th><%= f.label :number_of_students %></th>
        <th><%= f.label :school_area %></th>
        <th><%= f.label :school_floor_area %></th>
      </tr>
      <tr>
        <td><%= f.text_field :number_of_students %>人</td>
        <td><%= f.text_field :school_area %>㎡</td>
        <td><%= f.text_field :school_floor_area %>㎡</td>
        <td><%= f.hidden_field :id %></td>
      </tr>
    </table>
    <% end %>
  </div>
  <%= form.submit %>
<% end %>
